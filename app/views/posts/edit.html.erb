<div class="contents row">
  <div class="container">
    <h3>投稿する曲</h3>
    <%= form_with(model: @post, local: true) do |form| %>
      <%= form.submit "投稿" %>
      <%= form.text_field :image, placeholder: "選択する" %>
      <%= form.text_area :text, placeholder: "コメント", rows: "10" %>
    <% end %>
  </div>
</div>